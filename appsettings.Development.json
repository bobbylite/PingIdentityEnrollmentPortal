{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "PingOneAuthentication": {
    "BaseUrl": "https://api.pingone.com/v1/",
    "Issuer": "https://api.pingone.com",
    "ClientId": "{ClientId}",
    "ClientSecret": "{ClientSecret}",
    "TokenEndpoint": "https://auth.pingone.com/{EnvironmentId}/as/token",
    "EnvironmentId": "{EnvironmentId}",
    "PopulationId": "{PopulationId}",
    "BirthRightGroupId": "{GroupId}"
  },
  "MailGun": {
    "MagicLinkBaseUrl": "https://localhost:7256/",
    "ApiBaseUrl": "https://api.mailgun.net/v3/",
    "ApiKey": "{ApiKey}",
    "SandboxDomain": "{TenantId}.mailgun.org",
    "FromEmail": "GetChatty Ltd. <postmaster@{TenantId}.mailgun.org>"
  },
  "ConnectionStrings": {
    "PostgreSqlConnection": "Host={Host};Database={Database};Username={Username};Password={Password};SSLMode=prefer;CommandTimeout=10;"
  },
  "AllowedHosts": "*"
}
