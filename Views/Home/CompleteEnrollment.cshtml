@using Microsoft.Extensions.Options
@using PingIdentityApp.Configuration
@using PingIdentityApp.Services.Enrollment
@inject IEnrollmentService EnrollmentService
@inject IOptionsMonitor<PingOneAuthenticationOptions> PingOneOptions

@{
    ViewData["Title"] = "Complete Enrollment";

    // Extract the invitationId from the query string
    var invitationIdStr = Context.Request.Query["invitationId"].ToString();
    var isValidInvitation = Guid.TryParse(invitationIdStr, out var invitationId) 
        && EnrollmentService.ActiveEmailInvitations.Any(i => i.InvitationId == invitationId);
    var email = EnrollmentService.ActiveEmailInvitations
        .FirstOrDefault(i => i.InvitationId == invitationId)?.Email;
    var populationId = PingOneOptions.CurrentValue.PopulationId;
}

@if (!isValidInvitation)
{
    <div class="alert alert-danger" role="alert">
        Invalid or expired invitation link.
    </div>
    return;
}

<div class="container py-5 d-flex justify-content-center align-items-center min-vh-100 bg-light">
    <div class="card shadow-lg border-0 rounded-4" style="max-width: 500px; width: 100%;">
        <div class="card-body p-5 position-relative">
            <div class="text-center mb-4">
                <img src="~/images/GetChattyLogo.png" alt="GetChatty Ltd" class="mb-3" style="height: 60px;">
                <h2 class="fw-bold text-danger">Complete Your Enrollment</h2>
                <p class="text-muted">Create a secure password to finish setting up your account.</p>
            </div>

            <form asp-action="CompleteEnrollment" method="post" class="text-start">
                <!-- Hidden invitationId or username if needed -->
                <input type="hidden" name="Email" value="@email" />
                <input type="hidden" name="Population.Id" value="@populationId" />
                <input type="hidden" name="Password.ForceChange" value="false" />
                <input type="hidden" name="Lifecycle.Status" value="VERIFICATION_REQUIRED" />
                <input type="hidden" name="Lifecycle.SuppressVerificationCode" value="false" />
                <input type="hidden" name="InvitationId" value="@invitationIdStr" />

                <!-- First Name -->
                <div class="mb-3">
                    <label for="firstName" class="form-label fw-semibold text-secondary">First Name</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light"><i class="bi bi-person-fill text-danger"></i></span>
                        <input type="text" id="firstName" name="Name.Given" class="form-control form-control-lg rounded-end" placeholder="Enter your first name" required />
                    </div>
                </div>

                <!-- Last Name -->
                <div class="mb-3">
                    <label for="lastName" class="form-label fw-semibold text-secondary">Last Name</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light"><i class="bi bi-person-fill text-danger"></i></span>
                        <input type="text" id="lastName" name="Name.Family" class="form-control form-control-lg rounded-end" placeholder="Enter your last name" required />
                    </div>
                </div>

                <!-- Username -->
                <div class="mb-3">
                    <label for="username" class="form-label fw-semibold text-secondary">Username</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light"><i class="bi bi-person-fill text-danger"></i></span>
                        <input type="text" id="username" name="Username" class="form-control form-control-lg rounded-end" placeholder="Enter your username" required />
                    </div>
                </div>

                <!-- Password -->
                <div class="mb-3">
                    <label for="password" class="form-label fw-semibold text-secondary">Password</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light"><i class="bi bi-lock-fill text-danger"></i></span>
                        <input type="password" id="password" name="Password.Value" class="form-control form-control-lg rounded-end" placeholder="Create a password" required />
                    </div>
                </div>

                <!-- Confirm Password -->
                <div class="mb-4">
                    <label for="confirmPassword" class="form-label fw-semibold text-secondary">Confirm Password</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light"><i class="bi bi-shield-lock-fill text-danger"></i></span>
                        <input type="password" id="confirmPassword" name="ConfirmPassword" class="form-control form-control-lg rounded-end" placeholder="Confirm password" required />
                    </div>
                </div>

                <button type="submit" class="btn btn-danger btn-lg w-100 rounded-pill fw-semibold shadow-sm">
                    <i class="bi bi-person-check-fill me-2"></i> Complete Enrollment
                </button>
            </form>

            <div class="text-center mt-4">
                <small class="text-muted">
                    By completing enrollment, you agree to GetChatty Ltdâ€™s access and usage policies.
                </small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.querySelector('form').addEventListener('submit', function (e) {
            const pass = document.getElementById('password').value;
            const confirm = document.getElementById('confirmPassword').value;
            if (pass !== confirm) {
                e.preventDefault();
                alert('Passwords do not match. Please try again.');
            }
        });
    </script>
}
