@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Authentication.Cookies
@using Microsoft.AspNetCore.Authentication.OpenIdConnect
@using PingIdentityApp.Services.PingOne

@inject IHttpContextAccessor HttpContextAccessor
@inject IPingOneManagementService PingOneManagementService

@{
    var user = HttpContextAccessor.HttpContext?.User;
    var groups = user?.Claims.Where(c => c.Type == "groups").Select(c => c.Value).ToList() ?? new List<string>();

    var requiredGroups = new Dictionary<string, string>
    {
        { "Basic", "Birthright access." },
        { "Employee", "Access to internal employee tools and campaigns." }
    };

    var subject = user?.Claims.FirstOrDefault(c => c.Type == "sub")?.Value;

    var pingOneGroups = await PingOneManagementService.GetGroupsAsync();

    var missingGroups = pingOneGroups
        .Where(pg => !groups.Contains(pg.Name))
        .Where(pg => requiredGroups.ContainsKey(pg.Name))
        .ToList();

    var hasAllGroups = missingGroups.Count == 0;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>GetChatty Employee Resources</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
</head>

@if (user?.Identity?.IsAuthenticated is true)
{
    @if (hasAllGroups)
    {
        <body class="bg-body-tertiary">
            <div class="container py-5">
                <div class="text-center mb-5">
                    <img src="/images/GetChattyLogo.png" alt="GetChatty Logo" class="mb-3" style="width: 120px;">
                    <h1 class="fw-bold text-primary">Employee Resources Dashboard</h1>
                    <p class="text-secondary">Welcome, <strong>@user.Identity.Name</strong> — your employee resources are ready!</p>
                </div>

                <div class="row g-4 justify-content-center">
                    <div class="col-md-6 col-lg-4">
                        <div class="card border-0 shadow-sm h-100">
                            <div class="card-body text-center">
                                <i class="bi bi-buildings text-primary fs-1 mb-3"></i>
                                <h5 class="fw-bold">Employee Resources</h5>
                                <p class="text-secondary">You’ve got new resources available for your role.</p>
                                <a href="/CertificationsControl" class="btn btn-outline-primary rounded-pill px-4 mt-2">Resources</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </body>
        return;
    }
    else
    {
        <body class="bg-body-tertiary">
            <div class="container py-5 text-center">
                <div class="card shadow-sm border-0 mx-auto" style="max-width: 700px;">
                    <div class="card-header bg-danger text-white">
                        <h3 class="mb-0">Access Restricted</h3>
                    </div>
                    <div class="card-body">
                        <p class="text-muted mb-4">
                            You don’t currently have sufficient access for this resource.
                            Please contact support or request access to the groups below.
                        </p>

                        <table class="table table-hover align-middle">
                            <thead class="table-danger">
                                <tr>
                                    <th>Group</th>
                                    <th>Group ID</th>
                                    <th>Description</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var missing in missingGroups)
                                {
                                    <tr>
                                        <td>@missing.Name</td>
                                        <td>@missing.Id</td>
                                        <td>@missing.Description</td>
                                        <td>
                                            <a href="/Home/access?groupId=@missing.Id" class="btn btn-outline-success btn-sm">
                                                <i class="bi bi-info-circle me-1"></i> Take me there
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                        <p class="mt-3 text-secondary">Your current groups: <strong>@string.Join(", ", groups)</strong></p>
                    </div>
                </div>
            </div>
        </body>
    }
}
else
{
    <body class="bg-body-tertiary align-items-center text-center">
        <img src="/images/GetChattyLogo.png" alt="GetChatty Logo" class="mb-4" style="width: 140px;">
        <h2 class="fw-bold text-dark mb-3">GetChatty Employee Resources</h2>
        <p class="lead text-secondary mb-4">Log in to view and manage your employee resources.</p>
        <form method="get" action="/account/login">
            <button type="submit" class="btn btn-danger btn-lg rounded-pill px-5 py-3">
                <i class="bi bi-shield-lock-fill me-2"></i> Sign In
            </button>
        </form>
    </body>
}
</html>
