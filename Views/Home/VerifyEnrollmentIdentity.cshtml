@{
    ViewData["Title"] = "Verify Enrollment";
    var invitationIdStr = Context.Request.Query["invitationId"].ToString();
}

<div class="min-vh-100 d-flex flex-column justify-content-center align-items-center bg-light position-relative overflow-hidden">
    <!-- Soft background gradient -->
    <div class="position-absolute top-0 start-0 w-100 h-100 bg-gradient"
         style="background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 50%, #dee2e6 100%); z-index: 0;"></div>

    <!-- Accent shapes -->
    <div class="position-absolute rounded-circle bg-success-subtle opacity-25" style="width: 300px; height: 300px; top: -100px; right: -100px;"></div>
    <div class="position-absolute rounded-circle bg-primary-subtle opacity-25" style="width: 200px; height: 200px; bottom: -50px; left: -50px;"></div>

    <!-- Card -->
    <div class="card shadow-lg border-0 rounded-4 text-center bg-white bg-opacity-75 backdrop-blur p-5 position-relative" style="z-index: 1; max-width: 520px;">
        <div class="mb-4">
            <img src="/images/GetChattyLogo.png" alt="GetChatty Logo" style="width: 120px;" class="mb-3" />
            <h1 class="fw-bold text-dark">Verify Your Identity</h1>
        </div>

        <div class="alert alert-danger rounded-3 fw-semibold" role="alert">
            Please enter the verification code that was sent to the email you enrolled with.
        </div>

        <form asp-action="VerifyEnrollmentIdentity" method="post" class="text-start">
            <div class="mb-3">
                <input type="text" class="form-control form-control-lg text-center rounded-pill" 
                       id="verificationCode" 
                       name="VerificationCode" 
                       placeholder="Enter code here" 
                       required />
                <input type="hidden" name="InvitationId" value="@invitationIdStr" />
            </div>

            <div class="d-grid mt-3">
                <button type="submit" class="btn btn-primary btn-lg rounded-pill">
                    <i class="bi bi-shield-check me-2"></i> Verify
                </button>
            </div>
        </form>

        <p class="text-secondary mt-4 small">
            Didnâ€™t receive the code? Check your spam folder or request a new one via the enrollment email.
        </p>
    </div>

    <!-- Footer -->
    <footer class="mt-5 text-center text-muted small position-relative" style="z-index: 1;">
        <p class="mb-0">&copy; @DateTime.Now.Year GetChatty Ltd. All rights reserved.</p>
    </footer>
</div>
